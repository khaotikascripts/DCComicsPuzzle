<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorBackground"
    android:stretchColumns="0">
    <ImageView android:id="@id/image" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1.0"
        android:contentDescription="@string/imagealt_preview" />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:textColor="@color/colorTextLight" android:gravity="center"
            android:id="@id/back" android:background="@color/colorPrimary"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="@string/button_back" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>